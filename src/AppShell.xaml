<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UnlockingFlyout.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UnlockingFlyout"
    FlyoutBehavior="Locked"
    Title="UnlockingFlyout">

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="60,0.8*" RowDefinitions="68">
                <Image 
                    Grid.Column="0"
                    Source="{Binding FlyoutIcon}"
					VerticalOptions="Center"
					HorizontalOptions="Center"                               
					HeightRequest="38"
					WidthRequest="38"/>
                <Label
                    Grid.Column="1"
                    Text="{Binding Title}"
                    VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <FlyoutItem Title="Home" FlyoutIcon="dotnet_bot.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>

</Shell>